{
  "expo": {
    "name": "Wantok Wallet",
    "slug": "wantok-wallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "wantokwallet",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "primaryColor": "#F4C430",
    "backgroundColor": "#1A1A1A",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Wantok Wallet uses Face ID for secure authentication to access your digital credentials.",
        "NSCameraUsageDescription": "Camera access is needed to scan QR codes and capture document images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "CAMERA"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-local-authentication",
      "expo-secure-store",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
